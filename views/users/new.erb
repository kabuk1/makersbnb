<section class='bg-img sign-up-form text-center d-flex justify-content-center'>
  <div class="col-md-3 bg-light my-auto p-3 rounded">
    <img class='mb-4' src='/img/logo.png' width='200'>
    <h1 class='h4 mb-3 font-weight-normal'>Sign up</h1>
    <form action='/users' method='post'>
      <label for='inputEmail' class='visually-hidden'>Email address</label>
      <input type='email' name='email' id='inputEmail' class='form-control' placeholder='Email address'>
      <label for='inputPassword' class='visually-hidden'>Password</label>
      <input type='password' name='password' class='form-control' id='inputPassword' placeholder='Password'>
      <div class="d-grid gap-2">
      <button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
      </div>
    </form>
    <form action='/login' method='post'>
      <p class="mt-1">Already registered? <a href='/login'>Login</a></p>
    </form>
  </div>
  <h2><%= flash[:notice] %></h2>
</section>





